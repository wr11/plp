  align-items: center;
}

.vView2 {
  display: flex;
  flex-direction: row;
  height: 1000rpx;
  width: 700rpx;
  border: 6rpx solid black;
  margin-left: 17rpx;
  margin-top: 10rpx;
}

.hView1 {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 30rpx;
}

.pzBtn {
  border: 6rpx solid black;
}

.movable-area{
  pointer-events:none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.movable-view{ 
  pointer-events:auto;
  height: 70rpx;
  width: 70rpx;
  background: rgba(255, 0, 0, 0);
  border-radius: 90rpx;
}